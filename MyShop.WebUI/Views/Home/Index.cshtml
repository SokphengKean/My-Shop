@model IEnumerable<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<div class="card-deck mt-4">
	@foreach (var item in Model)
	{
		<div class="card">
			<img class="card-img-top" src="~/Content/ProductImages/@item.Image" alt="Card image cap" />
			<div class="card-body">
				<h5 class="card-title">@item.Name</h5>
				<p class="card-text">@item.Description</p>
				@Html.ActionLink("Detail" , "Detail" , new { Id = item.Id }, new { @class = "btn btn-primary" })
			</div>
		</div>
	}
</div>